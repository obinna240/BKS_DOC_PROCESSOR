<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mongo="http://www.springframework.org/schema/data/mongo"
	xmlns:gate="http://gate.ac.uk/ns/spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/data/mongo
		http://www.springframework.org/schema/data/mongo/spring-mongo-1.4.xsd
		http://www.springframework.org/schema/data/repository
		http://www.springframework.org/schema/data/repository/spring-repository-1.5.xsd
		http://gate.ac.uk/ns/spring http://gate.ac.uk/ns/spring.xsd">
	
	<context:annotation-config />
		
	<gate:init gate-home="C:/config/Bucks/OtherDocs_Algorithm" user-config-file="C:/config/Bucks/OtherDocs_Algorithm/gate.xml" plugins-home="C:/config/Bucks/OtherDocs_Algorithm/plugins" />
	
	<gate:duplicate id="otherDocsAlg" return-template="true">
		
		<gate:saved-application location="C:/config/Bucks/OtherDocs_Algorithm/application.xgapp" />
	</gate:duplicate>
	
	<bean id="processor" class="gate.util.LanguageAnalyserDocumentProcessor" destroy-method="cleanup">
		<property name="analyser" ref="otherDocsAlg" />
		<gate:pooled-proxy max-size="2" />
	</bean>
	
	 
	<bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
		<constructor-arg name="mongoDbFactory" ref="mongoDbFactory" />
	</bean>
	
	<bean name="gridFsTemplate"
		class="org.springframework.data.mongodb.gridfs.GridFsTemplate">
		<constructor-arg ref="mongoDbFactory" />
		<constructor-arg ref="converter" />
	</bean>
	<mongo:mapping-converter id="converter" />
	
	<mongo:mongo host="172.30.128.155" port="27017" />
	<mongo:db-factory dbname="Bucks" host="172.30.128.155" port="27017" />
	

</beans>
	


